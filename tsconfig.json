{
  "compilerOptions": {
    "allowJs": true,
    "target": "es6",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable", "es2015", "es2017", "esnext"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@esotericsoftware/*": ["./node_modules/@esotericsoftware/*"],
      "@/*": ["./src/*"],
      "@ffmpeg/*": ["./node_modules/@ffmpeg/*"] // הוספת נתיב ל-FFmpeg
    },
    "sourceMap": true,
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["node"] // הוספת טיפוסי Node
  },
  "include": [
    "src/**/*",
    "src/types/**/*",
    "node_modules/@ffmpeg/**/*" // הוספת FFmpeg modules
  ]
}
